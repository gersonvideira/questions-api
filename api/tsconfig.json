{
  "compilerOptions": {
    "target": "es2021",                               
    "module": "commonjs",                             
    "baseUrl": "./src",                               
     "paths": {
      "@pplication/*":["application/*"],
      "@domain/*":["domain/*"],
      "@infra/*":["infra/*"],
     },                                     
    "rootDirs": [
      "src",
      "test"
    ],                                  
    "outDir": "./dist",                                
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                   
    "skipLibCheck": true                              
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "migrations",
    "coverage"
  ]
}
